# Function to create a default Dockerfile based on project type
create_dockerfile() {
    PROJECT_TYPE=$1
    if [ "$PROJECT_TYPE" == "python-pipenv" ]; then
        cat > Dockerfile <<EOF
# Python Dockerfile
FROM python:3.8-slim

WORKDIR /app
COPY Pipfile Pipfile.lock ./
RUN pip install pipenv && pipenv install --deploy --ignore-pipfile

COPY . .

EXPOSE 5000
CMD ["pipenv", "run", "python", "your_script.py"]
EOF
        DEFAULT_PORT=5000
    elif [ "$PROJECT_TYPE" == "node-bun" ]; then
        cat > Dockerfile <<EOF
# Node.js (Bun) Dockerfile
FROM oven/bun:latest

WORKDIR /app
COPY . .
RUN bun install

EXPOSE 8080
CMD ["bun", "start"]
EOF
        DEFAULT_PORT=8080
    elif [ "$PROJECT_TYPE" == "node" ]; then
        cat > Dockerfile <<EOF
# Node.js Dockerfile
FROM node:14

WORKDIR /app
COPY package*.json ./
RUN npm install

COPY . .

EXPOSE 80
CMD ["node", "your_script.js"]
EOF
        DEFAULT_PORT=8080
    else
        echo -e "${RED}Unsupported project type: ${PROJECT_TYPE}. Please create a Dockerfile manually.${NC}"
        exit 1
    fi
